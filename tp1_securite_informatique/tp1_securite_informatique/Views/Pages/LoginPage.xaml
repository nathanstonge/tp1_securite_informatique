<Page x:Class="tp1_securite_informatique_client.Views.Pages.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:tp1_securite_informatique_client.Views.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LoginPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="0.5*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="0.5*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>
        <Label VerticalAlignment="Center" HorizontalAlignment="Center" Grid.Row="1">Identifiant</Label>
        <TextBox Margin="320,10,320,10" Grid.Row="2"/>

        <Label VerticalAlignment="Center" HorizontalAlignment="Center" Grid.Row="3">Mot de passe</Label>
        <TextBox Margin="320,10,320,10" Grid.Row="4"/>

        <Button Margin="320,10,320,10" Grid.Row="5" Content="Se connecter"/>
    </Grid>
</Page>
